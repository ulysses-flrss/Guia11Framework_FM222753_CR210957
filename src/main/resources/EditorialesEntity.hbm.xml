<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="sv.edu.udb.www.springmvc.entities.EditorialesEntity" table="editoriales" schema="inventario_libros">
        <id name="codigoEditorial">
            <column name="codigo_editorial" sql-type="varchar(6)" length="6"/>
        </id>
        <property name="nombreEditorial">
            <column name="nombre_editorial" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="contacto">
            <column name="contacto" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="telefono">
            <column name="telefono" sql-type="varchar(9)" length="9"/>
        </property>
    </class>
</hibernate-mapping>